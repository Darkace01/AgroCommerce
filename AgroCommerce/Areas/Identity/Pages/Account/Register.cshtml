@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

    <style>
        body {
        }

        .registerPage {
            margin-left: auto;
            margin-right: auto;
            align-items: center;
            background: $gray-200;
            display: flex;
            height: 100vh;
            justify-content: center;
        }
    </style>
    <div class="login-box registerPage">
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-logo">Register</p>
                <hr>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                   

                    <div class="form-group mb-1">
                        <label asp-for="Input.Email"></label>

                        <div class="input-group mb-1">
                            <input asp-for="Input.Email" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger mb-0"></span>
                    </div>

                    <div class="form-group mb-1">
                        <label asp-for="Input.Password"></label>
                        <div class="input-group mb-1">
                            <input asp-for="Input.Password" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <div class="input-group mb-1">
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label>Account Type</label>
                        <div class="input-group mb-1">
                            <select class="form-control" asp-for="Input.Role">
                                <option value="Seller">Seller</option>
                                <option value="Buyer">Buyer</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </div>
                </form>
                <p class="mb-0">
                    <a id="forgot-password" asp-page="./Login" class="text-center">Already a user? Sign in</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
