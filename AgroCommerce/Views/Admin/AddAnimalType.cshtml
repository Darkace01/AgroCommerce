@model AgroCommerce.ViewModels.AnimalTypeViewModel
@{
    ViewData["Title"] = "AddAnimalType";
    Layout = "~/Views/Shared/_AdminDashBoardLayout.cshtml";
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

<link href="~/DashBoard/css/select2.min.css" rel="stylesheet" />
<script src="~/DashBoard/js/select2.full.min.js"></script>

<h1>Add AnimalType</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Class"></label>
                    <select id="classTgs" multiple="multiple" class="form-control" name="classTags"></select>
                    <span asp-validation-for="Class" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Breed"></label>
                    <select id="breedTgs" multiple="multiple" class="form-control" name="breedTags"></select>
                    <span asp-validation-for="Breed" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<script>
    $(document).ready(function () {

        $("#classTgs").select2({
            tags: true,
            tokenSeparators: [',']
        });
        $("#breedTgs").select2({
            tags: true,
            tokenSeparators: [',']
        });
    });
</script>