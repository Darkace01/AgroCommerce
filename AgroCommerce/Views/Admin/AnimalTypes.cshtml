@model IEnumerable<AgroCommerce.Core.AnimalType>
@{
    ViewData["Title"] = "AnimalTypes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AnimalTypes</h1>
<a asp-action="AddAnimalType" class="btn btn-info">Create New</a>
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Breed)
                </th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Breed)
                </th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Breed)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditAnimalType", new { id = item.ID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "AnimalTypeDetails", new { id = item.ID }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "DeleteAnimalType", new { id = item.ID }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>